aside#secondary.sidebar
	if categories && tags
		section.widget.widget-categories
			h2 Categories
			ul
				each category in categories
					li
						a(href="/category/" + category.term_slug)=category.term_name
		section.widget.widget-tags
			h2 Tags
			ul.wp-tag-cloud
				each tag in tags
					li
						a(href="/tags/" + tag.term_slug)=tag.term_name
	            
	section.widget.widget-search
		h2 Search
		form(method="GET" class="search-form" action="/search")
			input(type="search" name="s"  class="search-field" placeholder="Search...")
			button(type="submit" class="search-submit").btn.btn-outline-primary Search