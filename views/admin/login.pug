include head.pug
body
	.page-wrapper.flex-row.align-items-center
		.container
			.row.justify-content-center
				.col-md-5
					form.card.p-4(action="/admin/login" method="POST")
						.card-header.text-center.text-uppercase.h4.font-weight-light
							| Login
						.card-body.py-5
							.form-group
								label.form-control-label Email
								input.form-control(type='email' name='email')
							.form-group
								label.form-control-label Password
								input.form-control(type='password' name='password')
							.custom-control.custom-checkbox.mt-4
								input#login.custom-control-input(type='checkbox')
								label.custom-control-label(for='login') Check this custom checkbox
						.card-footer
							.row
								.col-6
									button.btn.btn-primary.px-5(type='submit') Login
								.col-6
									a.btn.btn-link(href='#') Forgot password?
	include foot.pug
